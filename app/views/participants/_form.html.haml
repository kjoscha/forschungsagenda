= form_for(@participant) do |f|

  .row
    .col-xs-12
      = render 'layouts/flash'
    .col-xs-12
      %h1 Ihre persönliche Daten

  .row
    .col-sm-6
      Anrede *:
    .col-sm-6
      = f.select :sex, ['Herr', 'Frau'], {prompt: 'Bitte wählen'}, {class: 'form-control'}

  .row
    .col-sm-6
      Akademischer Titel *:
    .col-sm-6
      = f.text_field :title, placeholder: 'z.B. Dr.', class: 'form-control'

  .row
    .col-sm-6
      Vorname *:
    .col-sm-6
      = f.text_field :first_name, class: 'form-control'

  .row
    .col-sm-6
      Nachname *:
    .col-sm-6
      = f.text_field :last_name, class: 'form-control'

  .row
    .col-sm-6
      Institution/Organisation *:
    .col-sm-6
      = f.text_field :organisation, class: 'form-control'

  .row
    .col-sm-6
      Straße und Hausnummer *:
    .col-sm-6
      = f.text_field :address, class: 'form-control'

  .row
    .col-sm-6
      Postleitzahl *:
    .col-sm-6
      = f.text_field :postal_code, class: 'form-control'

  .row
    .col-sm-6
      Ort *:
    .col-sm-6
      = f.text_field :city, class: 'form-control'

  .row
    .col-sm-6
      Land *:
    .col-sm-6
      = f.text_field :country, class: 'form-control'

  .row
    .col-sm-6
      Email *:
    .col-sm-6
      = f.text_field :email, class: 'form-control'

  .row
    .col-sm-6
      Email Wdh. *:
    .col-sm-6
      = f.text_field :email_confirmation, class: 'form-control'

  .row
    .col-sm-6
      Telefonnummer:
    .col-sm-6
      = f.text_field :telephone, class: 'form-control'

  .row
    .col-sm-12
      .checkbox
        %label
          = f.check_box :accepted_data_storage
          Ich bin damit einverstanden, dass meine personenbezogenen Daten zur ordnungsmäßen Durchführung der Veranstaltung gespeichert werden. *

  .row
    .col-xs-12
      %h1 Dienstag, 09.05.2017

  .row
    .col-xs-12.margin-below
      = f.submit 'Abschicken', class: 'btn btn-success'
